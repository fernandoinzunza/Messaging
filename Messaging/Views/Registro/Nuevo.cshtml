@model Messaging.Models.Personas
@{

    Layout = "Formulario";
}
<img class="responsive-img" src="https://i.pinimg.com/originals/79/dc/31/79dc31280371b8ffbe56ec656418e122.png" style="max-height:5rem; margin:0 auto; display:block">
<h6 class="center">Create your Web Whatsapp Account</h6>
<p class="center" style="margin-bottom:2rem;">Continue to Whatsapp Web</p>
<style>
    .input-field input[type=text] {
        border: 1px solid #cfd8dc;
        border-radius: 1px;
    }

        .input-field input[type=text]:focus {
            border: 2px solid #26a69a;
            border-radius: 1px;
        }

    .input-field input[type=password]:focus {
        border: 2px solid #26a69a;
        border-radius: 1px;
    }

    .input-field input[type=password] {
        border: 1px solid #cfd8dc;
        border-radius: 1px;
    }

    .input-field label {
        margin-left: 0.4rem;
        background: white;
    }

    #label-name {
        max-width: 5.5rem;
        padding-left: 0.5rem;
    }

    #label-surname {
        max-width: 4.5rem;
        padding-left: 0.5rem;
    }

    #label-phon {
        max-width: 11rem;
        padding-left: 0.5rem;
    }

    #label-email {
        max-width: 3.5rem;
        padding-left: 0.5rem;
    }

    #label-passw {
        max-width: 5rem;
        padding-left: 0.5rem;
    }

    #label-confirm {
        max-width: 8.5rem;
        padding-left: 0.5rem;
    }
    .renglo{
        margin-bottom:0;
    }
</style>
<div class="row">
    <div class="col s12">
        <div class="row renglo">
            <div class="input-field col s12 m6">
                <input id="first_name" type="text" class="validate">
                <label id="label-name" for="first_name" style="">First Name</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="surname" type="text" class="validate">
                <label id="label-surname" for="surname">Surname</label>
            </div>
        </div>
        <div class="row renglo"> 
            <div class="input-field col s12 m6" >
                <input id="phone" type="text" class="validate" data-length="10">
                <label id="label-phon" for="phone">Mobile phone number</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="email" type="text" class="validate">
                <label for="email" id="label-email">E-mail</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <input id="pass" type="text" class="validate">
                <label for="pass" id="label-passw">Password</label>
            </div>
            <div class="input-field col s12 m6">
                <input id="confirm" type="text" class="validate">
                <label for="confirm" id="label-confirm">Confirm password</label>
            </div>
        </div>
        <div id="loading" class="center container"></div>
        <div class="row center">
            <div class="col s12 m6">
                <a href="/" style="margin-top:2.5rem; font-size:large;">Sign in instead</a>
            </div>
            <div class="col s12 m6">
                <button class="waves-effect waves-light btn" id="accept">Next</button>
            </div>
        </div>
    </div>
</div>

